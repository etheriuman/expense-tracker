<div class="container my-5">
  {{!-- 類別篩選器 --}}
  <div class="row justify-content-center mb-5">
    <div class="dropdown col-4 text-center justify-content-center">
      <button class="btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        類別篩選
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">生活支出</a>
        <a class="dropdown-item" href="#">交通支出</a>
        <a class="dropdown-item" href="#">娛樂支出</a>
        <a class="dropdown-item" href="#">食物支出</a>
        <a class="dropdown-item" href="#">其他支出</a>
      </div>
    </div>
  </div>
  {{!-- 總金額 --}}
  <div class="row justify-content-center mb-5">
    <div class="col-6 text-center">
      <p class="d-inline">總金額：</p><h2 class="d-inline">0000</h2>
    </div>
  </div>
  {{!-- 項目列表 --}}
  <div class="row justify-content-center">
    <ul class="list-group list-group-flush col-8">
      {{#each records}}
      <li class="list-group-item d-flex">
        <i class="fas fa-home"></i>
        <div class="">
          <p>{{this.name}}</p>
          <p>{{this.date}}</p>
        </div>
        <button>修改</button>
        <button>刪除</button>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
