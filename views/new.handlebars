<div class="container my-5">
  <form class="row justify-content-center" action="/records" method="POST">
  {{!-- name --}}
    <div class="form-row col-12 justify-content-center mb-5">
      <label class="align-center col-2 text-center" for="name">名稱:</label>
      <input class="form-control col-4" name="name" id="name" required>
    </div>
  {{!-- date --}}
    <div class="form-row col-12 justify-content-center mb-5">
      <label class="align-center col-2 text-center" for="date">日期:</label>
      <input type="date" class="form-control col-4" name="date" id="date" required>
    </div>
  {{!-- category --}}
  <div class="form-row col-12 justify-content-center mb-5">
    <label class="align-center col-2 text-center" for="category">類別:</label>
    <select class="custom-select col-4" name="category" id="category" required>
      <option disabled selected>選擇類別..</option>
      <option value="living">家居物業</option>
      <option value="traffic">交通出行</option>
      <option value="entertainment">休閒娛樂</option>
      <option value="food">餐飲食品</option>
      <option value="others">其他</option>
    </select>
  </div>
  {{!-- amount --}}
  <div class="form-row col-12 justify-content-center mb-5">
    <label class="align-center col-2 text-center" for="amount">金額:</label>
    <input type="number" step="1" min="0" class="form-control col-4" name="amount" id="amount" equired>
  </div>
  <div class="row col-12 justify-content-center mb-5">
    <div class="col-2"></div>
    <button type="submit" class="btn btn-outline-info col-4 d-block">新增</button>
  </div>
  </form>
</div>